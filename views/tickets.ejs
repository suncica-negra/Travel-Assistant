<%- include("partials/header"); -%>
<div class="container">
   <div class="row mb-3">
      <%- include("partials/menu"); -%>
      <div class="col-md-8 themed-grid-col data">
         <h2>Travel Assistant</h2>
         <p class="note">
            BOOKED TICKET LIST
         </p>
         <p class="note">
            Depending on the type of flight, some fields in the table may be blank.
         </p>
         <table>
            <tr>
               <th>From</th>
               <th>Departure date</th>
               <th>Through</th>
               <th>To</th>
               <th>Return date</th>
               <th>Date of order</th>
               <th>Cancel ticket</th>
            </tr>
            <%  tickets.forEach(function(ticket){ %>
            <tr>
               <td><%= ticket.from %></td>
               <td><%= ticket.date1 %></td>
               <td><%= ticket.through %></td>
               <td><%= ticket.to %></td>
               <td><%= ticket.date2 %></td>
               <td><%= ticket.dateOfOrdering %></td>
               <td>
                  <form action="/<%= ticket.id %>?_method=DELETE" method="POST">
                     <a href="/<%= ticket.id %>?_method=DELETE"><button type="submit" class="btn btn-danger">Delete</button></a>
                  </form>
               </td>
            </tr>
            <% }) %>
         </table>
      </div>
   </div>
</div>
<%- include("partials/footer"); -%>