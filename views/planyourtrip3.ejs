<%- include("partials/header"); -%>
<div class="container">
   <div class="row mb-3">
      <%- include("partials/menu"); -%>
      <div class="col-md-8 themed-grid-col data">
         <h2>Travel Assistant</h2>
         <p class="note">
            Select an option for multi-destination flight
         </p>
         <form action="/planyourtrip3" method="post">
            <div class="autocomplete">
               <input autocomplete="off" class="form-control form-control-lg" type="text" placeholder="From" id="myId" name="from" required>
            </div>
            <div class="form-group select">
               <p>Select departure date</p>
               <input autocomplete="off" class="datepicker" width="276" name="date1" type="date" required/>
            </div>
            <div class="autocomplete">
               <input autocomplete="off" class="form-control form-control-lg" type="text" placeholder="Through" id="myId2" name="through" required>
            </div>
            <div class="autocomplete">
               <input autocomplete="off" class="form-control form-control-lg select" type="text" placeholder="To" id="myId3" name="to" required>
            </div>
            <div class="form-group select">
               <p>Select a return date</p>
               <input autocomplete="off" class="datepicker1" width="276" name="date2" type="date" required/>
            </div>
            <div class="margin">
               <button type="submit" name="button" class="button margin1">Save</button>
         </form>
         </div>
      </div>
   </div>
</div>
<%- include("partials/footer"); -%>